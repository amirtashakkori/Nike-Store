<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layoutDirection="rtl"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/img_product_layout"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/btn_add_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_favorites" />

        <ImageView
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:id="@+id/img_product"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"/>

    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:id="@+id/detail_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/img_product_layout">

        <TextView
            android:id="@+id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="14sp"
            android:textAppearance="?textAppearanceBody1"
            android:text="نام محصول"/>

        <LinearLayout
            android:id="@+id/wehave"
            android:layout_below="@id/txt_product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_box"
                android:layout_gravity="center_vertical"
                app:tint="@color/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?textAppearanceBody2"
                android:text="موجود در انبار"
                android:layout_marginRight="4dp"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/txt_product_previous_price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/txt_product_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_product_name"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/wehave">

            <TextView
                android:id="@+id/txt_product_previous_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?textAppearanceBody2"
                android:textColor="@color/red"
                android:text="TextView" />

            <View
                android:layout_width="80dp"
                android:layout_height="1dp"
                android:background="@color/red"
                android:layout_gravity="center_vertical"/>

        </FrameLayout>


        <TextView
            android:id="@+id/txt_product_current_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="?textAppearanceBody1"
            android:textColor="@color/green"
            android:text="TextView"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/txt_product_previous_price_layout"/>

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="?dividerColor"
        android:layout_below="@+id/detail_layout" />

</RelativeLayout>