<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="146dp"
    android:layout_height="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginBottom="8dp"
    android:layoutDirection="rtl"
    android:background="@color/white">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="8dp"
        android:id="@+id/card_img"
        android:layout_width="match_parent"
        android:layout_height="145dp">

        <FrameLayout
            android:id="@+id/img_product_Flayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:srcCompat="@tools:sample/avatars" />


            <ImageView
                android:elevation="2dp"
                android:id="@+id/favoriteBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:scaleType="centerInside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_favorites" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:minLines="2"
        android:textAppearance="?textAppearanceBody1"
        android:layout_below="@+id/card_img"
        tools:text="TextView"
        android:layout_alignParentRight="true"/>

    <FrameLayout
        android:id="@+id/txt_product_previous_price_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/txt_product_name"
        android:layout_marginRight="8dp">

        <TextView
            android:id="@+id/txt_product_previous_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?textAppearanceBody2"
            android:textColor="@color/red"
            tools:text="TextView" />

        <View
            android:layout_width="80dp"
            android:layout_height="1dp"
            android:background="@color/red"
            android:layout_gravity="center_vertical"/>

    </FrameLayout>

    <TextView
        android:id="@+id/txt_product_current_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="8dp"
        android:textAppearance="?textAppearanceBody1"
        android:textColor="@color/green"
        android:text="TextView"
        android:layout_below="@id/txt_product_previous_price_layout"/>

</RelativeLayout>